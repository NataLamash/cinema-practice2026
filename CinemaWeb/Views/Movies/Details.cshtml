@model CinemaWeb.ViewModels.ClientFilmDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">@Model.Title</h2>
            <span class="badge bg-warning text-dark">Вік: @(Model.AllowedMinAge ?? 0)+</span> </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.PosterUrl))
                    {
                        <img src="@Model.PosterUrl" alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-height: 500px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="alert alert-secondary py-5">Постер недоступний</div>
                    }
                </div>

                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Опис:</dt>
                        <dd class="col-sm-9">
                            @(string.IsNullOrEmpty(Model.Description) ? "Відсутні дані" : Model.Description)
                        </dd>

                        <dt class="col-sm-3">Дата виходу:</dt>
                        <dd class="col-sm-9">
                            @(Model.ReleaseDate.HasValue
                                                        ? Model.ReleaseDate.Value.ToString("MMMM d, yyyy")
                                                        : "Відсутні дані")
                        </dd>

                        <dt class="col-sm-3">Тривалість:</dt>
                        <dd class="col-sm-9">@Model.DurationMinutes хв.</dd>

                        <dt class="col-sm-3">Продюсер:</dt>
                        <dd class="col-sm-9">@(Model.ProducerName ?? "")</dd>

                        <hr class="my-3" />

                        <dt class="col-sm-3">Жанри:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Genres.Any())
                            {
                                @foreach (var genre in Model.Genres)
                                {
                                    <span class="badge bg-secondary me-1">@genre</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Відсутні дані</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Актори:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Actors.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var actor in Model.Actors)
                                    {
                                        <li>
                                            <i class="bi bi-person-fill text-muted"></i> @actor
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">Відсутні дані</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Трейлер:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.TrailerEmbedUrl))
                            {
                                <div class="mt-3">
                                    <div class="ratio ratio-16x9 shadow-sm rounded overflow-hidden">
                                        <iframe src="@Model.TrailerEmbedUrl"
                                                title="YouTube video player"
                                                frameborder="0"
                                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                allowfullscreen>
                                        </iframe>
                                    </div>
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(Model.TrailerUrl))
                            {
                                <div class="mt-3">
                                    <a href="@Model.TrailerUrl" target="_blank" class="btn btn-danger w-100">
                                        <i class="bi bi-youtube"></i> Дивитися трейлер
                                    </a>
                                </div>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">Назад до фільмів</a>
        </div>
    </div>
</div>
