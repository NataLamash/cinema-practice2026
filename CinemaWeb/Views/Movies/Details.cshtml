@model CinemaWeb.ViewModels.ClientFilmDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <a asp-action="Index" class="btn btn-outline-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Back to movies
    </a>

    <div class="row">
        <div class="col-md-4 mb-4">
            @if (!string.IsNullOrEmpty(Model.PosterUrl))
            {
                <img src="@Model.PosterUrl" alt="@Model.Title" class="img-fluid rounded shadow w-100" style="object-fit: cover;" />
            }
            else
            {
                <div class="bg-light text-center py-5 rounded border">
                    <span class="text-muted">No Poster</span>
                </div>
            }
        </div>

        <div class="col-md-8">
            <h1 class="display-5 fw-bold">@Model.Title</h1>

            <div class="mb-3">
                <span class="badge bg-warning text-dark fs-6 me-2">@((Model.AllowedMinAge ?? 0))+</span>
                <span class="text-muted"><i class="bi bi-clock"></i> @Model.DurationMinutes хв</span>
                <span class="mx-2">|</span>
                <span class="text-muted">@Model.ReleaseDate?.ToString("yyyy")</span>
            </div>

            @if (Model.Genres.Any())
            {
                <div class="mb-3">
                    @foreach (var genre in Model.Genres)
                    {
                        <span class="badge bg-secondary me-1">@genre</span>
                    }
                </div>
            }

            <p class="lead mt-4">@Model.Description</p>

            <div class="row mt-4">
                <div class="col-md-6">
                    <strong>Producer:</strong> @Model.ProducerName
                </div>
                @if (Model.Actors.Any())
                {
                    <div class="col-md-12 mt-2">
                        <strong>Cast:</strong> @string.Join(", ", Model.Actors)
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.TrailerEmbedUrl))
            {
                <div class="mt-5">
                    <h3>Trailer</h3>
                    <div class="ratio ratio-16x9 shadow rounded overflow-hidden">
                        <iframe src="@Model.TrailerEmbedUrl"
                                title="YouTube video player"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(Model.TrailerUrl))
            {
                <div class="mt-4">
                    <a href="@Model.TrailerUrl" target="_blank" class="btn btn-danger">
                        <i class="bi bi-youtube"></i> Watch on YouTube
                    </a>
                </div>
            }

            <div class="mt-5 p-4 bg-light rounded">
                <h4 class="text-muted">Sessions coming soon...</h4>
            </div>
        </div>
    </div>
</div>
