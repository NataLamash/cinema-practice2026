@model CinemaDomain.Model.Film

@{
    ViewData["Title"] = "Film Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">@Model.Name</h2>
            <span class="badge bg-warning text-dark">Age: @Model.AllowedMinAge+</span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.PosterUrl))
                    {
                        <img src="@Model.PosterUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 500px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="alert alert-secondary py-5">No Poster Available</div>
                    }

                    @if (!string.IsNullOrEmpty(Model.TrailerUrl))
                    {
                        <div class="mt-3">
                            <a href="@Model.TrailerUrl" target="_blank" class="btn btn-danger w-100">
                                <i class="bi bi-youtube"></i> Watch Trailer
                            </a>
                        </div>
                    }
                </div>

                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">
                            @(string.IsNullOrEmpty(Model.Description) ? "No description provided." : Model.Description)
                        </dd>

                        <dt class="col-sm-3">Release Date:</dt>
                        <dd class="col-sm-9">
                            @(Model.ReleaseDate.HasValue
                                                        ? Model.ReleaseDate.Value.ToString("MMMM d, yyyy")
                                                        : "Unknown")
                        </dd>

                        <dt class="col-sm-3">Duration:</dt>
                        <dd class="col-sm-9">@Model.DurationMinutes min</dd>

                        <dt class="col-sm-3">Producer:</dt>
                        <dd class="col-sm-9">@(Model.Producer?.Name ?? "Not specified")</dd>

                        <hr class="my-3" />

                        <dt class="col-sm-3">Genres:</dt>
                        <dd class="col-sm-9">
                            @if (Model.FilmGenres.Any())
                            {
                                @foreach (var fg in Model.FilmGenres)
                                {
                                    <span class="badge bg-secondary me-1">@fg.Genre?.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Actors:</dt>
                        <dd class="col-sm-9">
                            @if (Model.FilmActors.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var fa in Model.FilmActors)
                                    {
                                        <li>
                                            <i class="bi bi-person-fill text-muted"></i> @fa.Actor?.Name
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {

                                <span class="text-muted">None</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Companies:</dt>
                        <dd class="col-sm-9">
                            @if (Model.FilmCompanies.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var fc in Model.FilmCompanies)
                                    {
                                        <li>@fc.Company?.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {

                                <span class="text-muted">None</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
