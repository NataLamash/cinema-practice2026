@model CinemaWeb.ViewModels.SessionViewModel

@{
    // Форматуємо поточну дату для обмеження вибору (min)
    // Формат yyyy-MM-ddTHH:mm — єдиний, який коректно сприймає інпут datetime-local
    var now = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Створення нового сеансу</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FilmId" class="form-label font-weight-bold">Фільм</label>
                                <select asp-for="FilmId" class="form-select" asp-items="ViewBag.Films">
                                    <option value="">-- Оберіть фільм --</option>
                                </select>
                                <span asp-validation-for="FilmId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="HallId" class="form-label font-weight-bold">Кінозал</label>
                                <select asp-for="HallId" class="form-select" asp-items="ViewBag.Halls">
                                    <option value="">-- Оберіть зал --</option>
                                </select>
                                <span asp-validation-for="HallId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartTime" class="form-label font-weight-bold">Початок</label>
                                @* step="60" прибирає секунди, min забороняє минуле *@
                                <input asp-for="StartTime" class="form-control" type="datetime-local" step="60" min="@now" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndTime" class="form-label font-weight-bold">Завершення</label>
                                <input asp-for="EndTime" class="form-control" type="datetime-local" step="60" min="@now" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="BasePrice" class="form-label font-weight-bold">Базова ціна</label>
                            <div class="input-group">
                                <input asp-for="BasePrice" class="form-control" type="number" step="0.01" />
                                <span class="input-group-text">грн</span>
                            </div>
                            <span asp-validation-for="BasePrice" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                            <button type="submit" class="btn btn-success px-5">Зберегти</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
