@model IEnumerable<CinemaDomain.Model.Session>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Керування сеансами</h2>
            <a asp-action="Create" class="btn btn-primary shadow-sm">Додати новий сеанс</a>
        </div>

        @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

        <div class="table-responsive shadow-sm">
            <table class="table table-hover border">
                <thead class="table-dark">
                    <tr>
                        <th>Фільм</th>
                        <th>Зал</th>
                        <th>Початок</th>
                        <th>Кінець</th>
                        <th>Ціна</th>
                        <th class="text-center">Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@(item.Film?.Name ?? "Фільм не вказано")</strong></td>
                        <td>@(item.Hall?.Name ?? "Зал не вказано")</td>
                        <td>@item.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.EndTime.ToString("HH:mm")</td>
                        <td>@item.BasePrice.ToString("F2") грн</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Редагувати</a>

                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Ви впевнені, що хочете видалити цей сеанс? Це дію неможливо буде скасувати.')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger ms-1">Видалити</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                    @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">
                            Сеанси відсутні. Натисніть "Додати новий сеанс", щоб створити перший запис.
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
