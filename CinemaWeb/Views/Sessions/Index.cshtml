@model IEnumerable<CinemaWeb.ViewModels.ClientSessionViewModel>
@using System.Globalization

@{
    ViewData["Title"] = "Найближчі сеанси";

    var selectedDate = ViewBag.CurrentDate as DateTime?;
    
    var availableDates = Enumerable.Range(0, 7)
        .Select(i => DateTime.Now.Date.AddDays(i))
        .ToList();
}

<div class="container mt-4">
    <h2>Найближчі сеанси</h2>

    <form method="get" class="mb-3">
    <div class="row align-items-center">
        <div class="col-md-4">
            @if (ViewBag.CurrentDate != null)
            {
                <input type="hidden" name="filterDate" 
                       value="@(((DateTime)ViewBag.CurrentDate).ToString("yyyy-MM-dd"))" />
            }

            <select name="filmId" class="form-control" onchange="this.form.submit()" 
                    asp-items="ViewBag.FilmList">
                <option value="">-- Всі фільми --</option>
            </select>
        </div>
    </div>
    </form>

    <ul class="nav nav-pills mb-4 mt-3">
        <li class="nav-item">
            <a class="nav-link @(selectedDate == null ? "active" : "")" 
               asp-action="Index" 
               asp-route-filterDate=""
               asp-route-filmId="@ViewBag.CurrentFilmId">
                Всі
            </a>
        </li>

        @foreach (var date in availableDates)
        {
            var isActive = selectedDate.HasValue && selectedDate.Value.Date == date;
            
            <li class="nav-item">
                <a class="nav-link @(isActive ? "active" : "")" 
                   asp-action="Index" 
                   asp-route-filterDate="@date.ToString("yyyy-MM-dd")"
                   asp-route-filmId="@ViewBag.CurrentFilmId">
                   
                   @date.ToString("ddd, dd.MM", new CultureInfo("uk-UA"))
                </a>
            </li>
        }
    </ul>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            На цей період запланованих сеансів немає.
        </div>
    }
    else
    {
        @foreach (var group in Model.GroupBy(s => s.StartTime.Date))
        {
            <div class="mb-5">
                <h4 class="bg-light p-2 border-left border-primary text-primary">
                    @group.Key.ToString("D", new CultureInfo("uk-UA"))
                </h4>

                <table class="table table-hover table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Час початку</th>
                            <th>Фільм</th>
                            <th>Зал</th>
                            <th>Ціна</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in group.OrderBy(s => s.StartTime))
                        {
                            <tr>
                                <td class="font-weight-bold" style="width: 100px;">
                                    @item.StartTime.ToString("HH:mm")
                                </td>
                                <td class="font-weight-bold">
                                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.FilmId" class="text-dark">
                                    @item.FilmName
                                    </a>
                                </td>
                                <td>@item.HallName</td>
                                <td>від @item.BasePrice UAH</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        Придбати квиток
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>
