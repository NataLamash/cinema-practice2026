@model IEnumerable<CinemaDomain.Model.Film>

@{
    ViewData["Title"] = "Керування фільмами";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Список фільмів</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Додати новий фільм
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Назва</th>
                    <th>Продюсер</th>
                    <th>Дата виходу</th>
                    <th>Тривалість</th>
                    <th>Вік</th>
                    <th>Жанри</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.Name</td>
                        <td>
                            @(item.Producer?.Name ?? "-")
                        </td>
                        <td>
                            @item.ReleaseDate?.ToShortDateString()
                        </td>
                        <td>@item.DurationMinutes хв.</td>
                        <td>@(item.AllowedMinAge)+</td>
                        <td>
                            @* Виводимо жанри через кому *@
                            @string.Join(", ", item.FilmGenres.Select(fg => fg.Genre?.Name))
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Ред.</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Деталі</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Вид.</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
