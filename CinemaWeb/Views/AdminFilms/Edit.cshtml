@model CinemaWeb.ViewModels.FilmFormViewModel

@{
    ViewData["Title"] = "Редагування фільму";
}

<div class="container">
    <h2 class="mb-4">Редагувати: @Model.Name</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-warning text-dark">Основна інформація</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label asp-for="DurationMinutes" class="form-label"></label>
                                <input asp-for="DurationMinutes" class="form-control" type="number" />
                                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                            </div>
                            <div class="col-6 mb-3">
                                <label asp-for="AllowedMinAge" class="form-label"></label>
                                <input asp-for="AllowedMinAge" class="form-control" type="number" />
                                <span asp-validation-for="AllowedMinAge" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ReleaseDate" class="form-label"></label>
                            <input asp-for="ReleaseDate" class="form-control" type="date" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">Медіа</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="PosterUrl" class="form-label"></label>
                            <input asp-for="PosterUrl" class="form-control" />
                            <span asp-validation-for="PosterUrl" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TrailerUrl" class="form-label"></label>
                            <input asp-for="TrailerUrl" class="form-control" />
                            <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-info text-white">Зв'язки</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="ProducerId" class="form-label fw-bold"></label>
                            <select asp-for="ProducerId" class="form-select" asp-items="Model.ProducersList">
                                <option value="">-- Оберіть продюсера --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SelectedGenreIds" class="form-label fw-bold"></label>
                            <select asp-for="SelectedGenreIds" class="form-select" asp-items="Model.GenresList" multiple style="min-height: 120px;"></select>
                            <small class="text-muted d-block mt-1">Утримуйте Ctrl (Cmd) для вибору кількох.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SelectedActorIds" class="form-label fw-bold"></label>
                            <select asp-for="SelectedActorIds" class="form-select" asp-items="Model.ActorsList" multiple style="min-height: 150px;"></select>
                            <small class="text-muted d-block mt-1">Утримуйте Ctrl (Cmd) для вибору кількох.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SelectedCompanyIds" class="form-label fw-bold"></label>
                            <select asp-for="SelectedCompanyIds" class="form-select" asp-items="Model.CompaniesList" multiple style="min-height: 120px;"></select>
                            <small class="text-muted d-block mt-1">Утримуйте Ctrl (Cmd) для вибору кількох.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2 mt-3 mb-5">
            <button type="submit" class="btn btn-warning btn-lg">Оновити фільм</button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Назад</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
